{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"typeRoots": [
			"./node_modules/@types"
		],
		"types": ["node", "mocha", "vscode"],
		"paths": {
			"*": ["./src/types/*"]
		},
		"resolveJsonModule": true,
		"allowJs": true,
		"checkJs": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		".vscode-test"
	]
}
